@model IEnumerable<PruebaTecnica.DTO.Console.ConsoleDTO>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Consolas</title>
    <link href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
    <div class="container mt-4">
        <h1>Lista de Consolas</h1>
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <a href="@Url.Action("Create","Console")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Consola
            </a>
        </div>
        <table id="consolesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Fecha de Lanzamiento</th>
                    <th>Capacidad de Almacenamiento (GB)</th>
                    <th>Precio (USD$)</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var console in Model)
                {
                    <tr>
                        <td>@console.Name</td>
                        <td>@console.Brand</td>
                        <td>@console.ReleaseDate.ToString("dd/MM/yyyy")</td>
                        <td>@console.StorageCapacity</td>
                        <td>@console.Price</td>
                        <td id="row-@console.Id">
                            <a class="btn btn-primary" href="@Url.Action("Details", "Console", new { id = console.Id })">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <button class="btn btn-danger" onclick="confirmDelete(@console.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Borrado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres borrar esta consola?
                    <input type="hidden" id="deleteId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Borrar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#consolesTable').DataTable({
                responsive: true
            });
        });

        function confirmDelete(id) {
            $('#deleteId').val(id);
            $('#confirmDeleteModal').modal('show');
        }

        $('#confirmDelete').on('click', function () {
            var id = $('#deleteId').val();
            $.ajax({
                url: '/Console/DisabledConsole',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        toastr.success('Se ha borrado la consola satisfactoriamente.');
                        var table = $('#consolesTable').DataTable();
                        table.row($('#row-' + id)).remove().draw();
                    } else {
                        toastr.error('Error: ' + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    toastr.error('Ocurrió un error al desactivar la consola: ' + error);
                }
            });
            $('#confirmDeleteModal').modal('hide');
        });
    </script>
</body>
</html>
